    <script>
        // Initialize event listeners on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching event listeners
            document.querySelectorAll('[data-tab]').forEach(button => {
                button.addEventListener('click', function() {
                    const lang = this.getAttribute('data-tab');
                    showTab(lang);
                });
            });
            
            // Try It button event listener
            const tryBtn = document.getElementById('try-btn');
            if (tryBtn) {
                tryBtn.addEventListener('click', fetchSampleJobs);
            }
        });
        
        // Tab switching
        function showTab(lang) {
            document.querySelectorAll('.code-content').forEach(el => el.classList.add('hidden'));
            document.querySelectorAll('[id^="tab-"]').forEach(el => {
                el.classList.remove('tab-active', 'text-brand-500');
                el.classList.add('text-gray-400');
            });
            
            document.getElementById(`code-${lang}`).classList.remove('hidden');
            const tab = document.getElementById(`tab-${lang}`);
            tab.classList.add('tab-active');
            tab.classList.remove('text-gray-400');
        }
        
        // Fetch sample jobs
        async function fetchSampleJobs() {
            const btn = document.getElementById('try-btn');
            const statusEl = document.getElementById('response-status');
            const bodyEl = document.getElementById('response-body');
            
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Fetching...';
            statusEl.textContent = 'Loading...';
            statusEl.className = 'text-xs px-2 py-1 rounded bg-yellow-500/20 text-yellow-400';
            
            try {
                const response = await fetch('/api/v1/jobs/sample?limit=25');
                const data = await response.json();
                
                statusEl.textContent = '200 OK';
                statusEl.className = 'text-xs px-2 py-1 rounded bg-green-500/20 text-green-400';
                
                bodyEl.innerHTML = syntaxHighlight(JSON.stringify(data, null, 2));
            } catch (error) {
                statusEl.textContent = 'Error';
                statusEl.className = 'text-xs px-2 py-1 rounded bg-red-500/20 text-red-400';
                bodyEl.innerHTML = `<span class="text-red-400">Error: ${error.message}</span>`;
            }
            
            btn.disabled = false;
            btn.innerHTML = '<i class="fas fa-play mr-2"></i>Try It - Fetch Live Jobs';
        }
        
        // JSON syntax highlighting
        function syntaxHighlight(json) {
            json = json.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
            return json.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
                let cls = 'json-number';
                if (/^"/.test(match)) {
                    if (/:$/.test(match)) {
                        cls = 'json-key';
                    } else {
                        cls = 'json-string';
                    }
                } else if (/true|false/.test(match)) {
                    cls = 'json-boolean';
                } else if (/null/.test(match)) {
                    cls = 'text-gray-500';
                }
                return '<span class="' + cls + '">' + match + '</span>';
            });
        }
    </script>
