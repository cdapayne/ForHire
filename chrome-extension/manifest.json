{
  "manifest_version": 3,
  "name": "LMSJobs Scraper",
  "version": "1.0",
  "description": "Scrapes job listings from the current page content.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*", "*://*.indeed.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.json", "common-geoids.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
